/*/*@charset "utf-8";
/* CSS Document */
ul,
ol,
dl,
li,
dt,
dd,
h1,
h2,
h3,
h4,
h5,
h6,
p,
nav,
input,
select {
    margin: 0;
    padding: 0;
}
body,
td,
th {
  position: relative;
  font-family: "ヒラギノ角ゴ Pro W3", "Hiragino Kaku Gothic Pro", "メイリオ", Meiryo, Osaka, "ＭＳ Ｐゴシック", "MS PGothic", sans-serif;
  line-height: 1.3;
  color: #fff;
  overflow-x: hidden;
  overflow-y: scroll;
}
body {
  background-size: 15.00rem auto;
  background-attachment: fixed;
  position: relative;
  min-width: 320px;
  -webkit-user-select: none;
     -moz-user-select: none;
      -ms-user-select: none;
          user-select: none;
}
html {
  font-size: 20px;
}

#mv h1 {
  background: url('<%= 'top.jpg' %>') no-repeat center top;
  height: 50rem;
  text-indent: -9999px;
}

@media screen and (max-width: 750px) {
  html {
    font-size: calc(100vw / 37.5);
  }
}

/* nav ****************************************************/
header{
  height: 4.25rem;
}

/*SP版のviewは以下に書く*/
@media screen and (max-width: 375px) {
  html {
    font-size: 8.5px;
  }
  #mv h1 {
    background: url('<%= 'top.jpg' %>') no-repeat center top;
    background-size: 100% auto;
    height: 40rem;
    text-indent: -9999px;
  }
}
